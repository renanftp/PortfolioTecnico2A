public class Main
{
	public static void main(String[] args) {
		System.out.println("matheus_f_duarte@estudante.sc.senai.br");
		int a = 7;
		int b = 10;
		int c = a+b;
		int d = a-b;
		int e = a*b;
		float f = (float) a/b;
		float media = (float) c/2;
		System.out.println("O resultado da soma de "+a+"+"+b+" é "+c);
		System.out.println("O resultado da subtração de "+a+"-"+b+" é "+d);
		System.out.println("O resultado da multiplicação de "+a+"x"+b+" é "+e);
		System.out.println("O resultado da divisão de "+a+"/"+b+" é "+f);
		System.out.println("A media de "+a+" e "+b+" é "+media);
		System.out.println();
		System.out.println("Gentileza gera gentileza!");
		
	}
}
